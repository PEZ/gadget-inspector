{
  "name": "ClojureScript Atom Browser",
  "version": "1.0",
  "description": "Browse the contents of ClojureScript atoms, log events that cause it to change, and skip around its history.",
  "manifest_version": 2,
  "devtools_page": "devtools.html",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": [
    "activeTab",
    "file:///*",
    "http://*/*",
    "https://*/*"
  ],
  "web_accessible_resources": ["api.js"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "exclude_globs": [ "https://www.google*" ],
      "js": ["content-script.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ]
}
